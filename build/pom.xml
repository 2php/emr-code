<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>iih</groupId>
	<artifactId>iih.parent</artifactId>
	<version>0.1-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>IIH Parent Project</name>
	<url>http://maven.apache.org</url>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<platform.version>1.2.3</platform.version>
		<springframework.version>4.0.7.RELEASE</springframework.version>
		<xap.version>0.1.1-SNAPSHOT</xap.version>
		<doma.version>1.35.0</doma.version>
		<fasf.version>1.2.33</fasf.version>
	</properties>

	<dependencies>		
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.10</version>
			<scope>test</scope>
		</dependency>
		
		<!-- xap -->		
		<dependency>
			<groupId>xap</groupId>
			<artifactId>xap.sv</artifactId>
			<version>${xap.version}</version>
		</dependency>
		
		<!-- doma -->
		<dependency>
			<groupId>org.seasar.doma</groupId>
			<artifactId>doma</artifactId>
			<version>${doma.version}</version>
			<scope>provided</scope>
		</dependency>
	</dependencies>
	
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-eclipse-plugin</artifactId>
				<version>2.9</version>
				<configuration>
					<downloadSources>true</downloadSources>
				</configuration>
			</plugin>
			
			<plugin>
				<inherited>true</inherited>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
					<optimise>true</optimise>
					<debug>true</debug>
				</configuration>
			</plugin>
		</plugins>
	</build>
	
	<modules>
		<module>../dist</module>
		<module>../kr/server</module>
		<module>../mr/server</module>
		<module>../po/server</module>
		<module>../en/server</module>
		
		<module>../pkuhit/pkuhit.iih.iemr-app</module>
		<module>../pkuhit/pkuhit.iih.iemr-ui</module>
		<module>../pkuhit/pkuhit.iih.mr-api</module>
		<module>../pkuhit/pkuhit.iih.mr-app</module>
		<module>../pkuhit/pkuhit.iih.x-api</module>
		
		<module>../pkuhit/pkuhit-model</module>
		
		<module>../3rdparty/szlh.iih-batch</module>
		<module>../3rdparty/szlh.iih-app</module>
	</modules>
	
	<distributionManagement>
		<repository>
			<id>nexus-releases</id>
			<name>Nexus Releases Repository</name>
			<url>${nexus.url}/content/repositories/releases/</url>
		</repository>
		<snapshotRepository>
			<id>nexus-snapshots</id>
			<name>Nexus Snapshots Repository</name>
			<url>${nexus.url}/content/repositories/snapshots/</url>
		</snapshotRepository>
	</distributionManagement>
</project>